<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
		<Button
                android:id="@+id/btnInvite"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="asdklasd" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/nav_drawer_menu"
        android:layout_width="@dimen/default_nav_size"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:id="@+id/nav_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/object_to_button_dark"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/default_child_padding" >

            <ImageView
                android:id="@+id/nav_user_avatar"
                android:layout_width="@dimen/default_nav_user_size"
                android:layout_height="@dimen/default_nav_user_size"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:id="@+id/nav_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_child_padding"
                android:layout_toRightOf="@id/nav_user_avatar" >

                <TextView
                    android:id="@+id/nav_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh (Adam) T. NGUYEN)"
                    android:textColor="@color/first_white_color"
                    android:textSize="@dimen/default_username_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nav_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nav_user_name"
                    android:text="adamnguyen.itdn@gmail.com"
                    android:textColor="@color/first_white_color"
                    android:textSize="@dimen/default_useremail_textsize"
                    android:textStyle="italic" />
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/navigation_drawer_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/nav_user"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>