<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:padding="@dimen/default_child_padding" >

    <ImageView
        android:id="@+id/nav_item_icon"
        android:layout_width="@dimen/default_nav_item_icon_size"
        android:layout_height="@dimen/default_nav_item_icon_size" />

    <TextView
        android:id="@+id/nav_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_child_padding"
        android:layout_toRightOf="@id/nav_item_icon"
        android:text="@string/app_name"
        android:textSize="@dimen/default_small_textsize"
        android:textStyle="bold" />

</RelativeLayout>